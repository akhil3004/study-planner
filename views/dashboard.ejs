<%- include('partials/header') %>

<div class="container">
  <div class="dashboard-header">
    <h1>Welcome, <%= user.name %></h1>
    <p>Branch: <%= user.branch %> | Semester: <%= user.currentSemester %></p>
  </div>
  
  <div class="dashboard-actions">
    <div class="card-container">
      <div class="card">
        <div class="card-header">
          <h2>Study Plan</h2>
        </div>
        <div class="card-body">
          <p class="card-text">Create and manage your study schedule based on KTU curriculum.</p>
          <a href="/courses/semesters" class="btn">Start Studying</a>
        </div>
      </div>
      
      <div class="card">
        <div class="card-header">
          <h2>My Progress</h2>
        </div>
        <div class="card-body">
          <p class="card-text">Track your study progress and quiz scores.</p>
          <a href="/courses/progress" class="btn">View Progress</a>
        </div>
      </div>
      
      <div class="card">
        <div class="card-header">
          <h2>My Profile</h2>
        </div>
        <div class="card-body">
          <p class="card-text">View and update your profile information and preferences.</p>
          <a href="/auth/profile" class="btn">Manage Profile</a>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h2>Study Materials</h2>
        </div>
        <div class="card-body">
          <p class="card-text">Access comprehensive study materials, notes, and question papers for KTU courses.</p>
          <a href="https://www.ktunotes.in/" target="_blank" class="btn">Visit KTU Notes</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>